{
  "manifest_version": 2,
  "name": "WhatsApp Mistral AI Connector",
  "version": "0.1.3",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "https://web.whatsapp.com/*",
    "https://*.whatsapp.net/*",
    "https://api.mistral.ai/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "web_accessible_resources": ["config.json"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}
